  border-radius: 8rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #000;
  line-height: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

