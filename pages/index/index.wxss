/*模块标题样式 */
.common-subtitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background: #fff;
}

.common-subtitle-left {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.common-subtitle-left_bg {
  width: 160rpx;
  height: 16rpx;
  background: linear-gradient(270deg,rgba(249,228,135,0) 0%,rgb(241, 138, 79) 100%);
  border-radius: 13rpx;
  position: absolute;
  top: 475rpx;
  left: 24rpx;
}

.common-subtitle-right {
  font-size: 26rpx;
  font-weight: 400;
  color: #959595;
  margin-right: 6rpx;
}

/*首页文章模块标题*/
.common-title-index {
  width: 94%;
  margin: 10rpx 0 20rpx 24rpx;
  background: #fff;
}

.common-title {
  position: relative;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.common-title-bg {
  width: 160rpx;
  height: 14rpx;
  background: linear-gradient(270deg,rgba(249,228,135,0) 0%,rgb(79, 109, 241) 100%);
  border-radius: 13rpx;
  position: absolute;
  margin-top: -14rpx;
}

/* 精选栏目菜单导航 */
.selected-nav {
  width: 94%;
  margin: 0 auto;
}

.selected-nav-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.selected-nav-item {
  text-align: center;
}

.selected-nav-item image {
  width: 156rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background: #f5f7f7;
}

.selected-nav-item text {
  display: block;
  font-size: 30rpx;
  color: #fff;
  margin: -60rpx 0 40rpx 0;
}

.selected-nav-item-miniapp{
  text-align: center;
  margin-bottom: 20rpx;
}

.selected-nav-item-miniapp image {
  position: relative;
  border-radius: 20rpx;
  width: 705rpx;
  height: 200rpx;
}

.selected-nav-item-miniapp text {
  position: absolute;
  top: 100rpx;
  left: 20px;
  right: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
}

.list-item-ad {
  margin-bottom: 16rpx;
}


/* 引导添加到我的小程序 */
.addMyMiniapp {
  color: #333;
  line-height: 1.2;
  background: #fff;
  padding: 24rpx 24rpx;
  border-radius: 12rpx;
  position: fixed;
  top: 20rpx;
  right: 24rpx;
  z-index: 999;
  box-shadow: 0 16rpx 30rpx -12rpx rgba(88, 88, 88, 0.2);
}

.addMyMiniapp>view {
  font-size: 24rpx;
  font-weight: 500;
}

.addMyMiniapp>text {
  font-size: 20rpx;
  font-weight: 200;
}

.addMyMiniapp::before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  transform: rotate(45deg);
  position: absolute;
  right: 118rpx;
  top: -10rpx;
}

