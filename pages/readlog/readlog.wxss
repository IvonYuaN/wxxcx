/* 用户信息 */

.userinfo {
  display: flex;
  align-items: center;
  background-image: url("https://cdn.weyooz.cn/wp-content/uploads/xcx-bg4.png");
  height: 300rpx;
  width: 94%;
  margin: 24rpx;
  border-radius: 8px;
}

/* 头像 */

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin-left: 48rpx;
  border-radius: 70rpx;
  background: #f5f7f7;
}

.userinfo_right {
  margin-left: 40rpx;
  color: #fff;
}

.userinfo_nickname {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1;
  display: block;
}

/* 用户角色 */

.userinfo_des_box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.userinfo_role {
  display: block;
  padding: 0 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  background-color: transparent;
  box-sizing: border-box;
  opacity: 0.6;
  font-size: 10px;
  color: #fff;
  line-height: 32rpx;
}

/* 更新信息按钮 */

.btn-update {
  font-size: 16rpx;
  color: #fff;
}

.btn-update>button, .btn-exit {
  padding: 0 16rpx;
  margin-left: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, .7);
  border-radius: 20rpx;
  background-color: transparent;
  box-sizing: border-box;
  opacity: 0.6;
  font-size: 10px;
  color: #fff;
  line-height: 32rpx;
}

.btn-update>button::after {
  border: none;
}

/* tab选项卡 */

.tab-bar {
  width: 94%;
  height: 100rpx;
  border-radius: 20rpx;
  margin-left: 24rpx;
  box-shadow: 0px 4px 8px #ececec;
  display: flex;
}

.tab-item {
  flex: 1;
  display: inline-block;
  background: #fff;
  color: #959595;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}

/* 选中样式 */

.tab-Selected {
  position: relative;
  color: #118fff;
  font-weight: 500;
}

.tab-Selected::after {
  content: '';
  height: 4rpx;
  width: 40rpx;
  background: #118fff;
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -20rpx;
}

/* 文章列表样式 */

.list_container {
  margin: 24rpx;
  
}

.list-item {
  margin-top: 20rpx;
  padding: 24rpx;
  border-radius: 8rpx;
  background-color: #f9f9f980;
  box-shadow: 0px 4px 8px #f7f7f7;
}

.list-item>text {
  font-size: 28rpx;
  font-weight: 500;
  color: #6c6c6c;
  word-wrap: break-word;
  word-break: break-all;
}

.tips {
  text-align: center;
  color: #959595;
  font-size: 15px;
  line-height: 400rpx;
}

.copyright-readlog {
  display: block;
  margin: 0 auto;
  color: #c4c4c480;
  text-align: center;
  font-size: 28rpx;
  font-weight: 300;
  margin-top: 40rpx;
  background-color: #f7f8f9;
  margin-bottom: 20rpx;
  padding: 30rpx 0rpx;
  border-radius: 20rpx;
}