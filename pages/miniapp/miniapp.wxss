.ma-60 {
	margin-top: 50rpx;
}

.topic-list {
  padding: 48rpx 0 0;
}

.list-item {
  height: 340rpx;
}

.topic-img {
  position: absolute;
  margin: 0rpx 24rpx;
  width: 94% !important; 
  height: 300rpx;
  border-radius: 20rpx;
}

.topic-name-box {
  position: relative;
  top: 100rpx;
  text-align: center;
  justify-content: space-between;
  font-size: 15px;
  font-weight: 700;
  color: #fff;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/* 订阅按钮 */

.btn-box image {
  width: 80rpx;
  height: 40rpx;
  display: block;
}

/* 专题描述 */

.topic-brief {
  position: relative;
  top: 130rpx;
  text-align: center;
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: rgba(255, 255, 255, .7);
}
