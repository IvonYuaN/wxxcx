.topic-list {
  margin-top: 50rpx;
}

.list-item {
  position: relative;
  margin: 0 24rpx 60rpx 24rpx;
  border-radius: 8rpx;
}

.topic-img {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
}

.topic-name-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  font-size: 15px;
  font-weight: 700;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: -150rpx;
}


/* 订阅按钮 */

.btn-box image {
  width: 80rpx;
  height: 40rpx;
  display: block;
}

/* 专题描述 */

.topic-brief {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  padding-left: 24rpx; 
}
