
.topic-list-item {
  margin-left:24rpx; 
  width: 94%;
  height: 300rpx;
  overflow: hidden;
  position: relative;
  border-radius: 20rpx;
}

.topic-list-item .cover {
  width: 100%;
  height: 300rpx;
  filter: brightness(80%);
  position: absolute;
}

.topic-content-brief {
  width: 80%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 2;
  text-align: center;
}

.topic-content-brief text {
  font-size: 16px;
  line-height: 1.6;
  color: #fff;
}

/* 搜索列表 */

.topic-content-title text {
  font-size: 18px;
  font-weight: 500;
  line-height: 1.6;
  color: #fff;
}

.searchKey {
  color: #121b23;
}